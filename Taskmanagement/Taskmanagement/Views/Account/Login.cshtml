@model Taskmanagement.Models.user



    <div>
        <h2 style="text-align:center">Login Your Account</h2>
        @using (Html.BeginForm())
        {
            <table align="center">
                <tr>
                    <td>Username : </td>
                    <td>@Html.TextBoxFor(e => e.UserName, new { @class = "btn btn-outline-success" })</td>
                    <td>@Html.ValidationMessageFor(e => e.UserName, "", new { @class = "error errorMsg" })</td>
                </tr>
                <tr>
                    <td>Password : </td>

                    <td>@Html.PasswordFor(e => e.Passworord, new { @class = "btn btn-outline-success" })</td>
                    <td>@Html.ValidationMessageFor(e => e.Passworord, "", new { @class = "error errorMsg" })</td>
                </tr>

                <tr>
                    <td>
                        <br />
                        <input type="submit" class="btn btn-primary" value="Login" />
                    </td>
                </tr>
            </table>
        }
    </div>
    <div style="text-align:center">
        @Html.ActionLink("Click to Signup", "Signup")
    </div>

